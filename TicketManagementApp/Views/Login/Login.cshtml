@model TicketManagementApp.Models.Accounts

@{
    ViewBag.Title = "Login";
}

<!DOCTYPE html>
<html lang="fa">
<head>

    <title>قالب صفحه ورود به ناحیه کاربری :: دریافت شده از وب روبیک</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Styles -->
    <link type="text/css" href="~/Content/LoginContent/css/bootstrap-rtl.min.css" rel="stylesheet" />
    <link type="text/css" href="~/Content/LoginContent/css/font-awesome.min.css" rel="stylesheet" />
    <link type="text/css" href="~/Content/LoginContent/css/animate.css" rel="stylesheet" />
    <link type="text/css" href="~/Content/LoginContent/css/hamburgers.min.css" rel="stylesheet" />
    <link type="text/css" href="~/Content/LoginContent/css/select2.min.css" rel="stylesheet" />
    <link type="text/css" href="~/Content/LoginContent/css/util.css" rel="stylesheet" />
    <link type="text/css" href="~/Content/LoginContent/css/style.css" rel="stylesheet" />
    <!-- / styles -->
</head>

<body>
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                @using (Html.BeginForm("Login", "Login", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <!-- input form -->
                    <form class="login100-form validate-form">
                        <span class="login100-form-title">ورود به ناحیه کاربری</span>

                        <!-- enter email-->
                        <div class="wrap-input100 validate-input" @*data-validate="لطفا پست الکترونیک خود را وارد کنید!"*@>
                            @Html.TextBoxFor(item => item.Username, htmlAttributes: new { @class = "input100", @placeholder="نام کاربری" })
                            @*<input class="input100" type="text" name="email" placeholder="نام کاربری">*@
                            <span class="focus-input100"></span>
                            <span class="symbol-input100">
                                <i class="fa fa-envelope" aria-hidden="true"></i>
                            </span>
                        </div>
                        <!-- / enter email -->
                        <!-- enter password-->
                        <div class="wrap-input100 validate-input" data-validate="لطفا رمز عبور را وارد کنید!">
                            @Html.TextBoxFor(item => item.Password, htmlAttributes: new { @class = "input100", @placeholder = "رمز عبور" })
                            @*<input class="input100" type="password" name="pass" placeholder="رمز عبور">*@
                            <span class="focus-input100"></span>
                            <span class="symbol-input100">
                                <i class="fa fa-lock" aria-hidden="true"></i>
                            </span>
                        </div>
                        <!-- / enter password-->
                        <!-- login button-->
                        <div class="container-login100-form-btn">
                            <button class="login100-form-btn">ورود</button>
                        </div>
                        <!-- / login button -->
                        <!-- restore password -->
                        <div class="text-center p-t-12">
                            <a class="txt2" href="#">
                                بازگردانی رمز عبور!
                            </a>
                        </div>
                        <!-- / restore password-->
                        <!-- register-->
                        @*<div class="text-center p-t-136">
                    <a class="txt2" href="#">
                        <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                        هنوز ثبت نام نکرده اید ؟
                    </a>
                </div>*@
                        <!-- / register-->

                    </form>
                }
                <!-- / input form -->
                <!-- form image -->
                <div class="login100-pic js-tilt" data-tilt>
                    <img src="~/Content/LoginContent/pics/Helpdesk-Vector-Transparent.png" alt="IMG">
                </div>
                <!-- / form image -->

            </div>
        </div>
    </div>


    <!-- scripts -->
    <script src="js/jquery-3.2.1.min.js"></script>
    <script src="js/popper.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/select2.min.js"></script>
    <script src="js/tilt.jquery.min.js"></script>
    <script>
        $('.js-tilt').tilt({
            scale: 1.1
        })
    </script>
    <script src="js/scripts.js"></script>
    <!-- / scripts -->
</body>
</html>
