@model IEnumerable<TicketManagementApp.Models.Accounts>
@using System.Globalization;
@{

    Layout = "~/Views/Shared/_DefPage1.cshtml";
    PersianCalendar persianCalendar = new PersianCalendar();
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("ایجاد", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserGroup.UserGroupTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserGroup.UserGroupTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>
                <td>
                    @*@Html.DisplayFor(modelItem => item.Password)*@ *******
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.ActionLink("ویرایش", "Edit", new { id = item.AccountID }) |
                    @Html.ActionLink("جزئیات", "Details", new { id = item.AccountID }) |
                    @Html.ActionLink("حذف", "Delete", new { id = item.AccountID })
                </td>
            </tr>
        }

    </table>

</body>
</html>
